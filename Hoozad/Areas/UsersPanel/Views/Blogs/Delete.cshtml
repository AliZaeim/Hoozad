@model DataLayer.Entities.Blogs.Blog
@using Core.Convertors;
@{
    ViewData["Title"] = "حذف خبر";
    Layout = "~/Areas/UsersPanel/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-xs-center alert alert-danger">حذف خبر</h1>

<h3 class="text-xs-center alert alert-warning">آیا مطمئن به حذف خبر هستید؟</h3>
<div class="container-fluid">

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BlogTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BlogTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BlogDate)
        </dt>
        <dd class="col-sm-10">
            @Model.BlogDate.ToShamsiN_WithTime()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BlogSummary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BlogSummary)
        </dd>

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BlogId" />
        <input type="submit" value="حــذف" class="btn btn-danger" /> |
        <a asp-action="Index">بازگشت</a>
    </form>
</div>
