@model Core.DTOs.Admin.AddStatusVM

<div class="container-fluid">
    <div class="row">
        <div class="offset-md-2 col-md-8 col-xs-12">
            <form method="post" id="addStatusForm" asp-area="UsersPanel" asp-controller="Reports" asp-action="AddStatus" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CartId" />
                <input type="hidden" asp-for="UserName" />
                <div class="form-group">
                    <label asp-for="StatusId" class="control-label"></label>
                    <select asp-for="StatusId"  class="form-control">
                        <option value="">لطفا وضعیت را انتخاب کنید</option>
                        @foreach (var item in Model.Statuses)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="StatusId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Comment" class="control-label"></label>
                    <textarea asp-for="Comment" maxlength="300" rows="4" class="form-control"></textarea>
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="button" value="ثبت" onclick="Submit_AddStatus()" class="btn btn-primary col-xs-12" />
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>