@model DataLayer.Entities.Store.ProductGroup

@{
    ViewData["Title"] = "جزئیات گروه محصول";
    Layout = "~/Areas/UsersPanel/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-xs-center alert alert-info">جزئیات گروه محصول</h1>

<div class="container-fluid">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="/images/pgroups/@Model.Image" width="50" height="50" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnTitle)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DiscountPercent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiscountPercent)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DiscountValue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiscountValue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Parent)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Parent == null)
            {
                <span>-</span>
            }
            else
            {
                @Html.DisplayFor(model => model.Parent!.Title)
            }

        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">ویرایش</a> |
    <a asp-action="Index">بازگشت</a>
</div>
