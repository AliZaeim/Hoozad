@model DataLayer.Entities.User.Role

@{
    ViewData["Title"] = "حذف نقش";
    Layout = "~/Areas/UsersPanel/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-xs-center alert alert-danger">حذف نقش</h1>

<h3 class="text-xs-center">آیا مطمئن به حذف هستید؟</h3>
<div class="container-fluid">

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoleName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoleName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoleTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoleTitle)
        </dd>

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="RoleId" />
        <input type="submit" value="حــذف" class="btn btn-danger" /> |
        <a asp-action="Index">بازگشت</a>
    </form>
</div>
