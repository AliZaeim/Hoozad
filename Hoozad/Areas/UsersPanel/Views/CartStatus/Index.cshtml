@model IEnumerable<DataLayer.Entities.Store.CartStatus>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/UsersPanel/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-xs-center alert alert-info">Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">ثبت</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.RegDate)
            </th>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.LastCreateUser)
            </th>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.Cart)
            </th>
            <th class="text-xs-center align-middle">عملیات</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="text-xs-center align-middle">
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td class="text-xs-center align-middle">
                @Html.DisplayFor(modelItem => item.RegDate)
            </td>
            <td class="text-xs-center align-middle">
                @Html.DisplayFor(modelItem => item.LastCreateUser)
            </td>
            <td class="text-xs-center align-middle">
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td class="text-xs-center align-middle">
                @Html.DisplayFor(modelItem => item.Cart!.Id)
            </td>
            <td class="text-xs-center align-middle">
                <a asp-action="Edit" asp-route-id="@item.Id">ویرایش</a> |
                <a asp-action="Details" asp-route-id="@item.Id">جزئیات</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>
