@model DataLayer.Entities.Store.ProductSize

@{
    ViewData["Title"] = "حذف سایز";
    Layout = "~/Areas/UsersPanel/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-xs-center alert alert-danger">حذف سایز</h1>

<h3 class="text-warning">آیا مطمئن به حـذف هستید؟</h3>
<div class="container-fluid">
    
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product!.ProductName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class = "col-sm-10">
