<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <h5 class="text-xs-center">جدول سایز</h5>
            <table class="table table-bordered">
                
                <thead>
                    <tr>
                        <th class="text-xs-center align-middle">سایز</th>
                        <th class="text-xs-center align-middle">دور سینه</th>
                        <th class="text-xs-center align-middle">دور کمر</th>
                        <th class="text-xs-center align-middle">دور باسن</th>
                        <th class="text-xs-center align-middle">دور بازو</th>
                        <th class="text-xs-center align-middle">قد آستین</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ProductSizes)
                    {
                        <tr>
                            <td class="text-xs-center align-middle">@item.Size</td>
                            <td class="text-xs-center align-middle">@item.ChestAround</td>
                            <td class="text-xs-center align-middle">@item.WaistAround</td>
                            <td class="text-xs-center align-middle">@item.HipsAround</td>
                            <td class="text-xs-center align-middle">@item.ArmAround</td>
                            <td class="text-xs-center align-middle">@item.SleeveLength</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
