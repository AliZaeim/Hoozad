@model DataLayer.Entities.Store.ProductColor


<h1 class="text-xs-center alert alert-danger">حذف رنگ محصول</h1>

<h3 class="text-xs-center text-warning">آیا مطمئن به حذف رنگ محصول هستید؟</h3>
<div class="container-fluid">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class="col-sm-10">
            <input type="color" value="@Model.Color" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ColorName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ColorName)
        </dd>

    </dl>

    <form asp-action="RemoveColor">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="حــذف" class="btn btn-danger" /> |
        <a asp-action="Index">بازگشت</a>
    </form>
</div>
