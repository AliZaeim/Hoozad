@model DataLayer.Entities.Store.ProductComponent
@using Core.Services.Interfaces;
@inject IStoreService _storeServicze

<h1 class="text-xs-center alert alert-danger">حذف جزء از محصول</h1>

<h3 class="text-xs-center text-warning">آیا مطمئن به حذف جزء محصول هستید؟</h3>
<div class="container-fluid">
    <dl class="row">
        @{
            DataLayer.Entities.Store.Product? product = await _storeServicze.GetProductByCodeAsync(Model.ProductCode!);
        }
        <dt class="col-sm-2">
            نام جـــزء
        </dt>
        <dd class="col-sm-10">
            @product!.ProductName
        </dd>

    </dl>

    <form asp-action="RemoveComponent" data-ajax="true" data-ajax-method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="حــذف" class="btn btn-danger" /> |
        <a asp-action="Index">بازگشت</a>
    </form>
</div>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.9/jquery.validate.unobtrusive.min.js"></script>