@model IEnumerable<DataLayer.Entities.Supplementary.SiteInfo>

@{
    ViewData["Title"] = "اطلاعات سایت";
    Layout = "~/Areas/UsersPanel/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-xs-center alert alert-info">اطلاعات سایت</h1>

<p>
    <a asp-action="Create" class="btn btn-success">ثــبت</a>
</p>
<table class="table table-borderd">
    <thead>
        <tr>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.WorkTime)
            </th>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.Phone1)
            </th>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.Mobile1)
            </th>            
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.SiteCurrency)
            </th>
            <th class="text-xs-center align-middle">عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-xs-center align-middle">
                    @Html.DisplayFor(modelItem => item.WorkTime)
                </td>
                <td class="text-xs-center align-middle">
                    @Html.DisplayFor(modelItem => item.Phone1)
                </td>                
                <td class="text-xs-center align-middle">
                    @Html.DisplayFor(modelItem => item.Mobile1)
                </td>        
                <td class="text-xs-center align-middle">
                    @Html.DisplayFor(modelItem => item.SiteCurrency)
                </td>
                <td class="text-xs-center align-middle">
                    <a asp-action="Edit" asp-route-id="@item.Id">ویرایش</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">جزئیات</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">حــذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
