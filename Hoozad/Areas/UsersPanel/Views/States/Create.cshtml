@model DataLayer.Entities.Supplementary.State

        @{
        ViewData["Title"] = "Create";
            Layout = "~/Areas/UsersPanel/Views/Shared/_AdminLayout.cshtml";
        }
        
        <h1 class="text-xs-center alert alert-info">Create</h1>
        
        <div class="container-fluid">
            <div class="row">
                <div class="offset-md-4 col-md-4 col-xs-12">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="StateName" class="control-label"></label>
                                        <input asp-for="StateName" class="form-control" />
                                        <span asp-validation-for="StateName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Freight" class="control-label"></label>
                                        <input asp-for="Freight" class="form-control" />
                                        <span asp-validation-for="Freight" class="text-danger"></span>
                                    </div>
                                    <div class="form-group form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input" asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                                        </label>
                                    </div>
<div class="form-group">
    <input type="submit" value="ثبت" class="btn btn-primary col-xs-12" />
</div>
</form>
</div>
</div>
</div>


<div>
    <a asp-action="Index">بازگشت</a>
</div>

        @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
