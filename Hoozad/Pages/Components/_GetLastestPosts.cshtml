@model IEnumerable<DataLayer.Entities.Blogs.Blog>
@using Core.Convertors;
<section class="mb-2 mb-md-3  mb-lg-4 mb-xl-5">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <h2 class="wow fadeInUp title-site">
                آخرین پست ها
                <span>آخرین پست ها</span>
            </h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="owl-carousel slider-Related-posts" id="Related-posts-slider">
                    @foreach (var item in Model)
                    {
                        <div class="wow  pulse item_slider-Related-posts" data-wow-duration="2s">
                            <div class="card card-post">
                                <div>
                                    <a href="/blog/d/@item.BlogUrl">
                                        <img class="card-img-top" width="360" height="360" src="/images/blogs/@item.BlogImageInBlog" alt="@item.BlogTitle">
                                    </a>
                                </div>
                                <div class="card-body">
                                    <div class="meta-post d-flex mb-3">
                                        <div class="author-post  me-3 item-meta-post">
                                            <a href="javascript:void(0)" class="ms-1"> @item.Author</a>
                                        </div>
                                        <div class="date-post item-meta-post  me-3">
                                            <a href="javascript:void(0)" class="data-link">
                                                @item.BlogDate.ToShamsiN()
                                            </a>
                                        </div>
                                    </div>
                                    <div class="content-post">
                                        <h2 class="title-post mb-3">
                                            <a href="/blog/d/@item.BlogUrl">
                                                @item.BlogTitle
                                            </a>
                                        </h2>
                                        <p class="card-text mb-3">
                                           @item.BlogSummary
                                        </p>
                                        <div class="btn-post-cart">
                                            <a href="/blog/d/@item.BlogUrl">بیشتر بخوانید</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }                    
                </div>
            </div>
        </div>
    </div>
</section>