@page "/ForgetPassword"
@model Web.Pages.Account.ForgetPasswordModel
@{
    ViewData["Title"] = "فراموشی رمز عبور";
}
@section CssRefs{
    <link rel="stylesheet" href="~/Layout/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="~/Layout/css/style.css">
    <link rel="stylesheet" href="~/Layout/css/all.min.css">
    <link rel="stylesheet" href="~/Layout/css/respansive.css">
    <link rel="stylesheet" href="~/Layout/css/animate.min.css">
}
@section Header{
    @await Component.InvokeAsync("HeaderComponent")
    }
<section class="mb-5 pb-sm-2 pb-md-3  pb-lg-4 pb-xl-5">
    <div class="area-breadcrumb-site">
        <h1 class="text-center mb-3">فراموشی رمز عبور</h1>
        <nav aria-label="breadcrumb" class="mb-4 mb-lg-3">
            <ol class="breadcrumb breadcrumb-singleProduct ">
                <li class="breadcrumb-item"><a href="/">خانه</a></li>
                <li class="breadcrumb-item active">فراموشی رمز عبور</li>
            </ol>
        </nav>
    </div>
</section>
<main class="content">
    <section class="mb-5 pb-sm-2 pb-md-3  pb-lg-4 pb-xl-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-sm-10 col-md-9 col-lg-8  col-xl-6">
                    <div class="register login-register-wrap">
                        <div class="area-form-register area-form-login-register  p-3 p-sm-4 p-md-5 ">
                            <h3 class="heading-style1 mb-3 text-center">فراموشی رمز عبور</h3>
                            <h5 class="text-center"> رمز عبور در صورت معتبر بودن تلفن همراه ارسال خواهد شد</h5>
                            <form asp-page="ForgetPassword" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                
                                <div class="form-group">
                                    <label asp-for="@Model.ForgotPasswordModel!.Cellphone" class="control-label"></label>
                                    <input asp-for="@Model.ForgotPasswordModel!.Cellphone" class="form-control" />
                                    <span asp-validation-for="@Model.ForgotPasswordModel!.Cellphone" class="text-danger"></span>
                                </div>
                                
                                <button type="submit" class="btn-animate1 mt-4">دریافت رمز</button>
                                <div class="form-note mt-4">
                                    حساب کاربری دارید؟ <a href="/Login">وارد شوید</a>
                                </div>
                            </form>

                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Footer{
    @await Component.InvokeAsync("FooterComponent")
    }
@section JsRefs{
    <script src="~/Layout/js/jquery-3.6.0.min.js"></script>
    <script src="~/Layout/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Layout/js/wow.min.js"></script>
    <script type="text/javascript" src="~/Layout/js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
}
@if (TempData["send"] != null)
{
    @if (TempData["send"]!.ToString() == "yes")
    {
        @section Scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            Swal.fire({
                icon: 'success',
                title: 'رمز به تلفن همراه ارسال شد',
                showConfirmButton: true,
                confirmButtonText: 'باشه',
            });
        })
    </script>
       }
    }
}

